<h1>KarmaVille's Most Famous</h1>
<table class="table table-bordered table-striped">
  <tr>
    <th>Karma</th>
    <th>Name</th>
    <th>Username</th>
    <th>Email</th>
  </tr>
  <% @users.each do |user| %>
    <%= render 'user_row', :user => user %>
  <% end %>
</table>


<div class="pagination">
  <ul>
    <li id="prev"><a href="?page=<%=@current_page-1%>">Prev</a></li>
    <% pages = [*1..(User.count/1000)] %>
    <% pages.each do |page| %>
      <li id=<%=page%>>
        <a href="?page=<%= page %>"><%= page %></a>
      </li>
    <% end %>
    <li id="next" data-last="<%=pages.last%>"><a href="?page=<%=@current_page+1%>">Next</a></li>
  </ul>
</div>
